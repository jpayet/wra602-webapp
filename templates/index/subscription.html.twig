    <div>
        {% for subscription in subscriptions %}
            <div>
                <h2>{{ subscription.title }}</h2>
                <p>{{ subscription.pdfLimit }} pdfs par jour</p>
                {% if subscription.price != 0 %}
                    <p>{{ subscription.price }} â‚¬ / mois</p>
                {% else %}
                    <p>Gratuit</p>
                {% endif %}
