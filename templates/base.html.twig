<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}PDF Raptor{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
        {% block stylesheets %}
        {% endblock %}

        {% block javascripts %}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %}
    </head>
    <body>
        <header>
            <nav>
                <p><a href="{{ path('app_home') }}">PDF Raptor</a</p>
                <ul>
                    <li><a href="{{ path('app_home') }}">Accueil</a></li>
                    <div>
                        <li><a href="{{ path('app_pdf') }}">Générer des PDFs</a></li>
                        <ul>
                            <li><a href="{{ path('app_pdf_generate_url') }}">PDF depuis URL</a></li>
                            <li><a href="{{ path('app_pdf_generate_html') }}">PDF depuis HTML</a></li>
                        </ul>
                    </div>

                    <li><a href="{{ path('app_history') }}">Historique</a></li>
                    <li><a href="{{ path('app_subscription_list') }}">Abonnements</a></li>
                    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                        <li><a href="{{ path('app_logout') }}">Déconnexion</a></li>
                    {% else %}
                        <li><a href="{{ path('app_login') }}">Connexion</a></li>
                    {% endif %}
                </ul>
            </nav>
        </header>
        {% block body %}{% endblock %}
    </body>
</html>
